<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="358dp">


        <LinearLayout
            android:id="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card1"
                android:layout_width="45dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@color/trainBlack"
                tools:srcCompat="@drawable/card_bla" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/card2"
                android:layout_width="45dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@color/trainBlue"
                tools:srcCompat="@drawable/card_blu" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/card3"
                android:layout_width="45dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@color/trainGreen"
                tools:srcCompat="@drawable/card_gre" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/card4"
                android:layout_width="45dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@color/trainOrange"
                app:srcCompat="@drawable/card_ora" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/card5"
                android:layout_width="45dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@color/trainPurple"
                tools:srcCompat="@drawable/card_loc" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/deck"
                android:layout_width="45dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@id/bottom_bar"
            android:layout_marginHorizontal="12dp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="135dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/tickets_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_ticket_w"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="266dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/players_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_myplaces"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="327dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/chat_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@android:drawable/stat_notify_chat"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="387dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/board_b"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/Points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:text="10" />
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
